<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>New Survey</h1>
            <form class="form" method="POST">
              <div class="form-group">
                <label for="titleTextField">Title</label>
                <input type="text" class="form-control" id="titleTextField"
                placeholder="Survey Title" name="title" value="<%= survey.title %>" required>
              </div>
              
              <div class="form-group col-md-3">
                <label for="startDate">Survey Start Date</label>
                <input type="date" class="form-control datepicker" id="startDate"
                placeholder="Survey start date" name="startdate" value="<%= survey.startdate %>"  required>
              </div>

              <div class="form-group col-md-3">
                <label for="endDate">Survey End Date</label>
                <input type="date" class="form-control datepicker" id="endDate"
                placeholder="Survey end date" name="enddate" value="<%= survey.enddate %>"  required>
              </div>

              <div class="form-group">
                <label for="q1TextField">Question 1</label>
                <input type="text" class="form-control" id="q1TextField"
                placeholder="Question 1" name="q1" value="<%= survey.q1 %>" required>
              </div>

              <div class="form-group">
                <label for="q2TextField">Question 2</label>
                <input type="text" class="form-control" id="q2TextField"
                placeholder="Question 2" name="q2" value="<%= survey.q2 %>" required>
              </div>

              <div class="form-group">
                <label for="q3TextField">Question 3</label>
                <input type="text" class="form-control" id="q3TextField"
                placeholder="Question 3" name="q3" value="<%= survey.q3 %>" required>
              </div>

              <div class="form-group">
                <label for="q4TextField">Question 4</label>
                <input type="text" class="form-control" id="q4TextField"
                placeholder="Question 4" name="q4" value="<%= survey.q4 %>" required>
              </div>

              <div class="form-group">
                <label for="q5TextField">Question 5</label>
                <input type="text" class="form-control" id="q5TextField"
                placeholder="Question 5" name="q5" value="<%= survey.q5 %>" required>
              </div>

              <button class="btn btn-primary " type="submit">
                <i class="fas fa-edit"></i> Submit</button>
            
                <a href="/survey-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
                

        </div>

    </div>
</div>



<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>